@model Jogador

@{
    ViewData["Title"] = "Tela de Jogadores";
}

<h1>Tela de jogadores</h1>

<form method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

    <label for="">Nome</label>
    <input type="text" name="Nome" required>

    <label for="">Email</label>
    <input type="Email" name="Email" required>

    <label for="">Senha</label>
    <input type="Password" name="Senha" required>

    <label for="">Equipe</label>
    <select name="Equipe" id="" required>
        <option value="0">Selecione uma opção</option>
        @foreach (Equipe equipe in ViewBag.Equipe)
        {
            <option value = "@equipe.IdEquipe" >@equipe.Nome</option>
        }
    </select>

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Imagem Equipe</th>
        <th>Ações</th>
    </thead>

    <tbody>
        @foreach (Jogador jogador in ViewBag.Jogador)
        {
            <tr>
                <td>@jogador.IdJogador</td>
                <td>@jogador.Nome</td>
                <td>@jogador.Email</td>
                <td>
                    <img src="/img/Equipes/@jogador.Equipe.Imagem" alt="" width="80px">
                </td>
                <td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Jogador"  asp-action="Excluir" asp-route-id="@jogador.IdJogador">Excluir</a>
                <td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Jogador"  asp-action="Editar" asp-route-id="@jogador.IdJogador">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>